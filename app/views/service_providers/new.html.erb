<div class="container">
  <div class="row">
    <div class="col">
      <h1>New Service Provider</h1>
      <hr />
      <%= form_with url: service_providers_path, data: { remote: false } do |form| %>
        <%= form.label :signing_certificates %>
        <%= form.number_field :signing_certificates, required: true, value: 0 %>
        <%= form.label :encryption_certificates %>
        <%= form.number_field :encryption_certificates, required: true, value: 0 %>
        <%= form.submit %>
      <% end %>
    </div>
  </div>
</div>
